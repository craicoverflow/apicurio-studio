{
	"compilerOptions": {
		"module": "NodeNext",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": false,
		"sourceMap": false,
		"outDir": "dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*.ts"
	]
}